        ];

        // ì´ˆê¸°í™”
        let currentCategory = 'all';
        let currentFilter = 'all';
        let searchTerm = '';

        // ë Œë”ë§ í•¨ìˆ˜
        function renderTools() {
            const content = document.getElementById('content');
            let filteredTools = tools.filter(tool => {
                // ì¹´í…Œê³ ë¦¬ í•„í„°
                if (currentCategory !== 'all' && tool.category !== currentCategory) return false;
                
                // ê²€ìƒ‰ í•„í„°
                if (searchTerm) {
                    const searchLower = searchTerm.toLowerCase();
                    const matchName = tool.name.toLowerCase().includes(searchLower);
                    const matchFeature = tool.feature.toLowerCase().includes(searchLower);
                    const matchUsage = tool.usage.toLowerCase().includes(searchLower);
                    if (!matchName && !matchFeature && !matchUsage) return false;
                }
                
                // ê¸°íƒ€ í•„í„°
                if (currentFilter === 'free' && !tool.free) return false;
                if (currentFilter === 'paid' && tool.free) return false;
                if (currentFilter === 'korean' && !['ìµœê³ ', 'ìš°ìˆ˜', 'ì–‘í˜¸'].includes(tool.korean)) return false;
                
                return true;
            });

            if (filteredTools.length === 0) {
                content.innerHTML = `
                    <div class="no-results">
                        <div class="no-results-icon">ğŸ”</div>
                        <h2>ê²€ìƒ‰ ê²°ê³¼ê°€ ì—†ìŠµë‹ˆë‹¤</h2>
                        <p>ë‹¤ë¥¸ ê²€ìƒ‰ì–´ë‚˜ í•„í„°ë¥¼ ì‹œë„í•´ë³´ì„¸ìš”.</p>
                    </div>
                `;
                return;
            }

            const categoryGroups = {};
            filteredTools.forEach(tool => {
                if (!categoryGroups[tool.category]) {
                    categoryGroups[tool.category] = [];
                }
                categoryGroups[tool.category].push(tool);
            });

            const categoryNames = {
                research: 'ğŸ” ì•„ì´ë””ì–´ ë°œêµ´ ë° ë¦¬ì„œì¹˜',
                data: 'ğŸ“Š ë°ì´í„° ìˆ˜ì§‘ ë° ë¶„ì„',
                stt: 'ğŸ¤ ì¸í„°ë·° ë° ë…¹ì·¨ (STT)',
                translation: 'ğŸŒ ë²ˆì—­',
                writing: 'âœï¸ ê¸°ì‚¬ ì‘ì„±',
                factcheck: 'âœ… ì‚¬ì‹¤ê²€ì¦',
                multimedia: 'ğŸ¬ ë©€í‹°ë¯¸ë””ì–´ ì œì‘',
                social: 'ğŸ“± ì†Œì…œë¯¸ë””ì–´ ê´€ë¦¬',
                analytics: 'ğŸ“ˆ ë…ì ë°˜ì‘ ë¶„ì„',
                advanced: 'âš™ï¸ ê³ ê¸‰/ì‹œìŠ¤í…œ'
            };

            let html = '';
            for (const [category, categoryTools] of Object.entries(categoryGroups)) {
                html += `
                    <div class="category-section active">
                        <h2 class="category-title">${categoryNames[category]}</h2>
                        <div class="tool-grid">
                            ${categoryTools.map(tool => `
                                <div class="tool-card">
                                    <div class="tool-header">
                                        <div>
                                            <div class="tool-name">${tool.name}</div>
                                            ${tool.url ? `<a href="${tool.url}" target="_blank" class="tool-url">ğŸ”— ${tool.url}</a>` : ''}
                                        </div>
                                        <div>
                                            <span class="badge ${tool.free ? 'badge-free' : 'badge-paid'}">${tool.free ? 'ë¬´ë£Œ' : 'ìœ ë£Œ'}</span>
                                            <span class="badge ${['ìµœê³ ', 'ìš°ìˆ˜'].includes(tool.korean) ? 'badge-korean' : 'badge-english'}">
                                                ${tool.korean === 'ìµœê³ ' ? 'ğŸ‡°ğŸ‡·' : tool.korean === 'ìš°ìˆ˜' ? 'í•œêµ­ì–´' : tool.korean === 'ì–‘í˜¸' ? 'í•œâ†”' : 'EN'}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="tool-feature">
                                        <strong>íŠ¹ì§•:</strong> ${tool.feature}
                                    </div>
                                    <div class="tool-usage">
                                        <strong>ğŸ’¡ í™œìš©:</strong> ${tool.usage}
                                    </div>
                                    <div class="tool-price">
                                        ğŸ’° ${tool.price}
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
            }

            content.innerHTML = html;
        }

        // íƒ­ í´ë¦­
        document.getElementById('tabs').addEventListener('click', (e) => {
            if (e.target.classList.contains('tab')) {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                e.target.classList.add('active');
                currentCategory = e.target.dataset.category;
                renderTools();
            }
        });

        // í•„í„° ë²„íŠ¼
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                e.target.classList.add('active');
                currentFilter = e.target.dataset.filter;
                renderTools();
            });
        });

        // ê²€ìƒ‰
        document.getElementById('searchInput').addEventListener('input', (e) => {
            searchTerm = e.target.value;
            renderTools();
        });

        // ì´ˆê¸° ë Œë”ë§
        renderTools();

        // í†µê³„ ì—…ë°ì´íŠ¸
        document.getElementById('totalTools').textContent = tools.length;
    </script>
